<footer
  id="contact"
  class="bg-gradient-to-r from-indigo-500 to-purple-600 text-white py-10"
>
  <div class="container mx-auto px-4 max-w-xl">
    <h2 class="text-xl font-semibold mb-4">Contactez-nous</h2>

    <form action="/contact" method="POST" class="space-y-4">
      <input
        type="email"
        name="email"
        placeholder="Votre email"
        class="w-full p-2 rounded text-black"
        required
      />

      <textarea
        name="message"
        placeholder="Votre message"
        class="w-full p-2 rounded text-black"
        rows="4"
        required
      ></textarea>

      <button
        type="submit"
        class="bg-white text-indigo-600 px-4 py-2 rounded hover:bg-gray-100"
      >
        Envoyer
      </button>
    </form>
  </div>
</footer>
